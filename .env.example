# ==============================================
# PFS AUTOMATION - Environment Variables Template
# ==============================================
# IMPORTANT: Copy this file to .env and fill with your values
# NEVER commit .env to version control

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
POSTGRES_USER=pfs_user
POSTGRES_PASSWORD=change_me_secure_password
POSTGRES_DB=pfs_automation
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ==============================================
# BACKEND CONFIGURATION
# ==============================================
BACKEND_PORT=3333
BACKEND_HOST=0.0.0.0
NODE_ENV=production

# App Security
APP_KEY=generate_a_secure_random_key_here_32_chars_min

# Session
SESSION_DRIVER=cookie

# ==============================================
# FRONTEND CONFIGURATION
# ==============================================
NEXT_PUBLIC_API_URL=http://localhost:3333
FRONTEND_PORT=3000

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# NGINX CONFIGURATION
# ==============================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ==============================================
# MCP SERVER CONFIGURATION
# ==============================================
MCP_SERVER_PORT=3334

# ==============================================
# SCHEDULER CONFIGURATION
# ==============================================
SCHEDULER_ENABLED=true

# ==============================================
# SECURITY & CORS
# ==============================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
